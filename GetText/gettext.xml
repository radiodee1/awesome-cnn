<?xml version="1.0" encoding="UTF-8"?>
<project name="gettext" default="all">
  
  
  <property file="gettext.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_api_22_platform" value="${jdk.home.android_api_22_platform}/../../../../../usr/lib/jvm/java-7-oracle/bin"/>
  <path id="jdk.classpath.android_api_22_platform">
    <fileset dir="${jdk.home.android_api_22_platform}">
      <include name="platforms/android-22/android.jar"/>
      <include name="platforms/android-22/data/res"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.appcompat-v7-22.2.0.classpath">
    <pathelement location="${basedir}/GetText/build/intermediates/exploded-aar/com.android.support/appcompat-v7/22.2.0/res"/>
    <pathelement location="${basedir}/GetText/build/intermediates/exploded-aar/com.android.support/appcompat-v7/22.2.0/classes.jar"/>
  </path>
  
  <path id="library.support-annotations-22.2.0.classpath">
    <pathelement location="${basedir}/../../../../../bin/Android/Sdk/extras/android/m2repository/com/android/support/support-annotations/22.2.0/support-annotations-22.2.0.jar"/>
  </path>
  
  <path id="library.support-v4-22.2.0.classpath">
    <pathelement location="${basedir}/GetText/build/intermediates/exploded-aar/com.android.support/support-v4/22.2.0/res"/>
    <pathelement location="${basedir}/GetText/build/intermediates/exploded-aar/com.android.support/support-v4/22.2.0/classes.jar"/>
    <pathelement location="${basedir}/GetText/build/intermediates/exploded-aar/com.android.support/support-v4/22.2.0/libs/internal_impl-22.2.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module GetText -->
  
  <dirname property="module.gettext.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.gettext" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.gettext" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.gettext" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.gettext" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="gettext.output.dir" value="${module.gettext.basedir}/build/classes/production/GetText"/>
  <property name="gettext.testoutput.dir" value="${module.gettext.basedir}/build/classes/test/GetText"/>
  
  <path id="gettext.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gettext.module.production.classpath">
    <path refid="${module.jdk.classpath.gettext}"/>
  </path>
  
  <path id="gettext.runtime.production.module.classpath">
    <pathelement location="${gettext.output.dir}"/>
  </path>
  
  <path id="gettext.module.classpath">
    <path refid="${module.jdk.classpath.gettext}"/>
    <pathelement location="${gettext.output.dir}"/>
  </path>
  
  <path id="gettext.runtime.module.classpath">
    <pathelement location="${gettext.testoutput.dir}"/>
    <pathelement location="${gettext.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.gettext">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gettext">
    <patternset refid="excluded.from.module.gettext"/>
  </patternset>
  
  
  <target name="compile.module.gettext" depends="compile.module.gettext.production,compile.module.gettext.tests" description="Compile module GetText"/>
  
  <target name="compile.module.gettext.production" depends="register.custom.compilers" description="Compile module GetText; production classes"/>
  
  <target name="compile.module.gettext.tests" depends="register.custom.compilers,compile.module.gettext.production" description="compile module GetText; test classes" unless="skip.tests"/>
  
  <target name="clean.module.gettext" description="cleanup module">
    <delete dir="${gettext.output.dir}"/>
    <delete dir="${gettext.testoutput.dir}"/>
  </target>
  
  
  <!-- Module GetText-GetText -->
  
  <dirname property="module.gettext-gettext.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.gettext-gettext" value="${jdk.home.android_api_22_platform}"/>
  <property name="module.jdk.bin.gettext-gettext" value="${jdk.bin.android_api_22_platform}"/>
  <property name="module.jdk.classpath.gettext-gettext" value="jdk.classpath.android_api_22_platform"/>
  
  <property name="compiler.args.gettext-gettext" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="gettext-gettext.output.dir" value="${module.gettext-gettext.basedir}/GetText/build/intermediates/classes/debug"/>
  <property name="gettext-gettext.testoutput.dir" value="${module.gettext-gettext.basedir}/GetText/build/intermediates/classes/androidTest/debug"/>
  
  <path id="gettext-gettext.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gettext-gettext.module.production.classpath">
    <path refid="${module.jdk.classpath.gettext-gettext}"/>
    <path refid="library.support-v4-22.2.0.classpath"/>
    <path refid="library.support-annotations-22.2.0.classpath"/>
    <path refid="library.appcompat-v7-22.2.0.classpath"/>
  </path>
  
  <path id="gettext-gettext.runtime.production.module.classpath">
    <pathelement location="${gettext-gettext.output.dir}"/>
    <path refid="library.support-v4-22.2.0.classpath"/>
    <path refid="library.support-annotations-22.2.0.classpath"/>
    <path refid="library.appcompat-v7-22.2.0.classpath"/>
  </path>
  
  <path id="gettext-gettext.module.classpath">
    <path refid="${module.jdk.classpath.gettext-gettext}"/>
    <pathelement location="${gettext-gettext.output.dir}"/>
    <path refid="library.support-v4-22.2.0.classpath"/>
    <path refid="library.support-annotations-22.2.0.classpath"/>
    <path refid="library.appcompat-v7-22.2.0.classpath"/>
  </path>
  
  <path id="gettext-gettext.runtime.module.classpath">
    <pathelement location="${gettext-gettext.testoutput.dir}"/>
    <pathelement location="${gettext-gettext.output.dir}"/>
    <path refid="library.support-v4-22.2.0.classpath"/>
    <path refid="library.support-annotations-22.2.0.classpath"/>
    <path refid="library.appcompat-v7-22.2.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.gettext-gettext">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gettext-gettext">
    <patternset refid="excluded.from.module.gettext-gettext"/>
  </patternset>
  
  <path id="gettext-gettext.module.sourcepath">
    <dirset dir="${module.gettext-gettext.basedir}/GetText">
      <include name="build/generated/source/r/debug"/>
      <include name="build/generated/source/aidl/debug"/>
      <include name="build/generated/source/buildConfig/debug"/>
      <include name="build/generated/source/rs/debug"/>
      <include name="build/generated/res/rs/debug"/>
      <include name="src/main/res"/>
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="gettext-gettext.module.test.sourcepath">
    <dirset dir="${module.gettext-gettext.basedir}/GetText">
      <include name="src/androidTest/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.gettext-gettext" depends="compile.module.gettext-gettext.production,compile.module.gettext-gettext.tests" description="Compile module GetText-GetText"/>
  
  <target name="compile.module.gettext-gettext.production" depends="register.custom.compilers" description="Compile module GetText-GetText; production classes">
    <mkdir dir="${gettext-gettext.output.dir}"/>
    <javac2 destdir="${gettext-gettext.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.gettext-gettext}/javac">
      <compilerarg line="${compiler.args.gettext-gettext}"/>
      <bootclasspath refid="gettext-gettext.module.bootclasspath"/>
      <classpath refid="gettext-gettext.module.production.classpath"/>
      <src refid="gettext-gettext.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.gettext-gettext"/>
    </javac2>
    
    <copy todir="${gettext-gettext.output.dir}">
      <fileset dir="${module.gettext-gettext.basedir}/GetText/build/generated/source/r/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/build/generated/source/aidl/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/build/generated/source/buildConfig/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/build/generated/source/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/build/generated/res/rs/debug">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/src/main/res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.gettext-gettext.basedir}/GetText/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.gettext-gettext.tests" depends="register.custom.compilers,compile.module.gettext-gettext.production" description="compile module GetText-GetText; test classes" unless="skip.tests">
    <mkdir dir="${gettext-gettext.testoutput.dir}"/>
    <javac2 destdir="${gettext-gettext.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.gettext-gettext}/javac">
      <compilerarg line="${compiler.args.gettext-gettext}"/>
      <bootclasspath refid="gettext-gettext.module.bootclasspath"/>
      <classpath refid="gettext-gettext.module.classpath"/>
      <src refid="gettext-gettext.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.gettext-gettext"/>
    </javac2>
    
    <copy todir="${gettext-gettext.testoutput.dir}">
      <fileset dir="${module.gettext-gettext.basedir}/GetText/src/androidTest/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.gettext-gettext" description="cleanup module">
    <delete dir="${gettext-gettext.output.dir}"/>
    <delete dir="${gettext-gettext.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.gettext, clean.module.gettext-gettext" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.gettext, compile.module.gettext-gettext" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>